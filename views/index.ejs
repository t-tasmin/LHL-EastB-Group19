<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <% if (typeof script === 'string') {%>
    <div id='err_msg'>
      <%= script %>
    </div>
    <% } %>

  <!-- <h1>Have fun! ðŸ¥”</h1> -->
  
  <form id="menu_form" action="/api/orders" method="POST">
    <div class="form-inline" class="form-group mb-2">
      <input id="Rice1" name="Rice" type="checkbox"  value="Rice">
      <label for="Rice">Rice</label>
      <input id='Rice2' onkeypress="return event.charCode >= 48" min="0"  style= 'margin-left:4em;' class="form-control" type="number" name="Rice" placeholder=0 style="width: 300px; margin: 1em">
      <script>
        $('#Rice2, #Rice1').on('click', () => {
          if (document.getElementById('Rice1').checked) {
            $('#Rice2').focus();
          } else {
            $('#Rice2').val('');
            $('#Rice2').blur();;
          }         
        });
      </script>
    </div>
    <div class="form-inline" class="form-group mb-2">
      <input id="chicken1" name="chicken" type="checkbox"  value="chicken">
      <label for="chicken">Chicken</label>
      <input id='chicken2' onkeypress="return event.charCode >= 48" min="0"  style= 'margin-left:4em;' class="form-control" type="number" name="chicken" placeholder=0 style="width: 300px; margin: 1em">
      <script>       
        $('#chicken2, #chicken1').on('focus click', () => {
          if (document.getElementById('chicken1').checked) {
            $('#chicken2').focus();
          } else {
            $('#chicken2').val('');
            $('#chicken2').blur();;
          }           
        });
     </script>
    </div>
    
    <div style="display:flex; flex-direction: row; align-items: center; justify-content: center; width: 100%;">
      <button id="order" type="submit" class="btn btn-primary">order</button>
    </div>
  </form>

</body>

</html>