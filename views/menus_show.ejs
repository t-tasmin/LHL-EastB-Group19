<!DOCTYPE html>
<html lang="en">

<head>
  <title>Menu Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <script src="https://kit.fontawesome.com/9b1b322d51.js" crossorigin="anonymous"></script>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>

  <header>
    <nav class="nav_bar">
      <div class="container_fluid">
        <a href="/" class="logo"><i class="fas fa-utensils"></i></a>
        <a href="/checkout"><i class="fas fa-shopping-cart"></i></a>
      </div>
    </nav>
  </header>
  <main>
    <% if (typeof script === 'string') {%>
      <div id='err_msg'>
        <%= script %>
      </div>
      <% } %>

    <p>What would you like to have today?</p>

    <form action="/menus" method="post">
      <div class="form_layout">
        <div class="menu_items">
          <% for (let item of menus) { %>
                <div class="item">
                  <input id="<%= item.name.split(' ').join('') %>1" type="checkbox" name="<%= item.name %>" value="<%= item.name %>">
                  <label for="<%= item.name %>"><%= item.id + ' - ' + item.name + "  " + '$' + item.unit_price %></label>
                  <input id="<%= item.name.split(' ').join('') %>2" type="number" name="<%= item.name %>" min="1" max="<%= item.number_available %>">
                </div>
                <script>       
                  $('#<%= item.name.split(' ').join('') %>2, #<%= item.name.split(' ').join('') %>1').on('click', () => {
                    if (document.getElementById('<%= item.name.split(' ').join('') %>1').checked) {
                      $('#<%= item.name.split(' ').join('') %>2').focus();
                    } else {
                      $('#<%= item.name.split(' ').join('') %>2').val('');
                      $('#<%= item.name.split(' ').join('') %>2').blur();;
                    }           
                  });
               </script>
                
          <% } %>
          </div>
          <button id= "name-form" class="btn" type="submit" >Checkout</button>
      </div>

    </form>

  </main>  
  
    <footer>
      <p>All copyrights reserved</p>
    </footer>
 

</body>

</html>
