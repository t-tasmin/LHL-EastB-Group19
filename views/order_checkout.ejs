<!DOCTYPE html>
<html lang="en">

<head>
  <title>Checkout Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/order_checkout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <script src="https://kit.fontawesome.com/9b1b322d51.js" crossorigin="anonymous"></script>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>

  <header>
    <nav class="nav_bar">
      <div class="container_fluid">
        <a href="/" class="logo"><i class="fas fa-utensils"></i></a>
        <a href="/checkout"><i class="fas fa-shopping-cart"></i></a>
      </div>
    </nav>
  </header>
  <main>
    <% if (typeof script === 'string') {%>
      <div id='err_msg'>
        <%= script %>
      </div>
      <% } %>

    <h3>Your Order</h3>

    <section class="final_order">
      <div class="order_reciept">
        <% for (let i = 0; i < order_checkout.length - 1; i++) { %>
        <div class="item">
          <span><%= order_checkout[i].name %></span>
          <span>$<%= order_checkout[i].unit_price %>*<%= order_checkout[i].qtt %></span>
          <span>$<%= order_checkout[i].ttl %></span>
        </div>
        <% } %>
         <div class="total_amount">
          <div class="amount">
            <span>Sub Total</span> <span> <%= order_checkout[order_checkout.length - 1].sttl %> </span>
          </div>
          <div class="amount">
            <span>Tax</span> <span> <%= order_checkout[order_checkout.length - 1].tax %> </span>
          </div>
          <div class="amount">
             <span>Total</span> <span><%= (order_checkout[order_checkout.length - 1].gttl).toFixed(2) %></span>
          </div>
        </div>
      </div>
      
      <form action="/orders" method="post">        
        <label for="cphone"> Phone </label>
        <input id='cphone' name="cphone" type="tel" placeholder="Enter your phone number e.g. 123-234-1234">
        <br>
        <label for="cname"> Name </label>
        <input id='cname' name="cname" type="text" placeholder="Enter your name e.g. Jane Doe">
        <br>
        <button id= "name-form" class="btn" type="submit" value= '<%= JSON.stringify(order_checkout) %>' name='order' >Order</button>
      </form>
    </section>

  </main>

  <footer>
    <p>All copyrights reserved</p>
  </footer>


</body>

</html>
